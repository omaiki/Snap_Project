<h1> Log In </h1>

<!-- not working off model, so form_tag, sessions_path will trigger create action -->
<%= form_tag sessions_path do %>
  <div class='field'>
    <%= label_tag :email %> <br />
    <%= text_field_tag :email, params[:email] %>
  </div>

  <div class='field'>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag "Log In" %>
  </div>

 <% end %>